# Development container for liquid-audio-nets
FROM ubuntu:24.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Build essentials
    build-essential \
    cmake \
    git \
    curl \
    pkg-config \
    # Python development
    python3 \
    python3-pip \
    python3-venv \
    # Audio libraries
    libasound2-dev \
    libpulse-dev \
    portaudio19-dev \
    # ARM development (cross-compilation)
    gcc-arm-none-eabi \
    # Documentation
    pandoc \
    # Utilities
    vim \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install Rust components
RUN rustup component add clippy rustfmt
RUN rustup target add thumbv7em-none-eabihf  # ARM Cortex-M4

# Set up Python environment
RUN python3 -m pip install --upgrade pip setuptools wheel

# Install common Python development tools
RUN pip3 install \
    jupyter \
    jupyterlab \
    tensorboard \
    pre-commit

# Create workspace
WORKDIR /workspace

# Copy dependency files
COPY pyproject.toml Cargo.toml CMakeLists.txt ./
COPY python/ ./python/

# Install Python dependencies
RUN pip3 install -e .[dev,training,embedded]

# Set up pre-commit
RUN git config --global --add safe.directory /workspace

EXPOSE 8888 6006

CMD ["jupyter", "lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root"]